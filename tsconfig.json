{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "rootDir": "src",
    "declarationDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ]
}